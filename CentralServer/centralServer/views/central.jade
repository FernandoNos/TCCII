extends layout

block content
	h1= title
	p Welcome to the Sensors Page
	div(class='container')
		#wrapper 
			div(class='col-lg-4')
				div(class='page-header')
					h1 Detected Sensors
				div(class='bs-component')
					#sensorList
						table(class='table table-striped table-hover')
							thead
								th Name
							tbody
		#sensorInfo
			h2 Sensor Info
			table(id = 'sensorDetails' )
				thead
					tr
						th Location
						th Proximity 
						th Timestamp
				tbody