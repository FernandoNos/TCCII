extends layout

block content
	div(class='page-header')
		h1 Gerenciamento de Sensores
	div(class='col-lg-2')
		div(class='well bs-component')
			#addSensor
				fieldset
					legend Registre um novo Sensor
					div(class='form-group')
					input#inputSensorName(type='text',placeholder='SensorName')
					br
					input#inputSensorID(type='text',placeholder='SensorID')
					br
					input#sensorType(type='checkbox',placeholder='SensorType')
					|Região?
					br
					button#btnAddSensor Add Sensor



	#sensorsList
		div(class='col-lg-12')
			h2 Lista de Sensores
					table(class='table table-striped table-hover')
						tr
							th ID
							th Nome
							th Região?
							th Delete?
					tbody